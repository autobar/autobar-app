<h1><%= "Edit information for #{@ingredient.name}" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h4><%= link_to "< Back to All Ingredients", ingredients_path %></h4>
  
    <%= form_for(@ingredient) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.label :pump %>
      <%= f.number_field :pump, class: 'form-control' %>
      
      <%= f.label :liquor %>
      <%= f.check_box :liquor, class: 'form-control' %>
      
      <%= f.label :mixer %>
      <%= f.check_box :mixer, class: 'form-control' %>
       <br />
      <%= f.submit "Update", class: "btn btn-primary" %>
    <% end %>
    <br />
    
    <%= button_to "Delete ingredient", { action: "destroy" }, method: :delete,
        data: { confirm: "Are you sure you want to delete drink #{@ingredient.name}? This cannot be undone." },
        class: "btn btn-danger" %>
  </div>
</div>
