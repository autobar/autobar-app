<h1><%= "Edit information for #{@ingredient.name}" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h4><%= link_to "< Back to All Ingredients", ingredients_path %></h4>
  
    <%= form_for(@ingredient) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.label :pump %>
      <%= f.number_field :pump, class: 'form-control' %>
      
      <%= f.label :drink_type_liquor, 'Liquor' %>
      <%= f.radio_button :drink_type, 'liquor', :checked => @ingredient.liquor,
        :value => 'liquor'%> 
      <%= f.label :drink_type_mixer, 'Mixer' %>
      <%= f.radio_button :drink_type, 'mixer', :checked => @ingredient.mixer,
        :value => 'mixer'%>
        
      <%= f.label :amount, 'Amount' %>
      <%= f.number_field :amount, class: 'form-control', :step => 0.1 %>
      
       <br />
      <%= f.submit "Update", class: "btn btn-primary" %>
    <% end %>
    <br />
    
    <%= button_to "Delete ingredient", { action: "destroy" }, method: :delete,
        data: { confirm: "Are you sure you want to delete drink #{@ingredient.name}? This cannot be undone." },
        class: "btn btn-danger" %>
  </div>
</div>
