<style>
    .check {
        opacity: 0.5;
        color: #996;
    }
    img.img-check{
    	height: 100px;
    }
    .drink-div{
    	width: 85%;
    }
</style>

<script>
    $(document).ready(function(e) {
        $(".img-check").click(function() {
            $(this).toggleClass("check");
        });
    });
</script>

<h1>Pick your drink! :)</h1>
<div class="container">
    <div class="row">
        <form method="get">
            <div class="form-group">

                <! -- <%= image_tag("screwdriver.jpg", width: '100px',  :alt =>"rss feed") -%>

                <table>
					<% @drinks.each do |drink| %>
						<tr>
	                        <div class="col-md-3">
	                            <label class="drink-div btn btn-primary"><img class="img-thumbnail img-check" <%=image_tag( drink.image,:size=> "100x100", :alt => "rss feed") -%> <%= drink.name %>
	                                <input type="checkbox" name="chk1" id="item4" value="val1" class="hidden" autocomplete="off">
	                            </label>
	                        </div>
	                    </tr>
					<% end %>
                    
                </table>

            </div>
            <input type="submit" value="I'm done selecting!" class="btn btn-success">

        </form>
    </div>
</div>

<%= link_to "Back", root_path %>