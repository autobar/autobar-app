<div style="display: flex; flex-wrap: wrap; width: 100%; justify-content: space-around;">
    <div class="pretty-block fcol-4">
        <a href="<%= welcome_pickdrink_path %>">
            <span class="card" style="">
                <%= image_tag("orderDrink.jpg", class: 'card-img-top', width: '100px', height: '100px') %>
                <span class="card-body">
                    <h5 class="card-title">Order Drinks</h5>
                </span>
            </span>
        </a>
    </div>

    <div class="pretty-block fcol-4">
        <a href="<%= welcome_orders_path %>">
            <span class="card" style="">
                <%= image_tag("myOrders.png", class: 'card-img-top', width: '100px', height: '100px') %>
                <span class="card-body">
                    <h5 class="card-title">Your Orders</h5>
                </span>
            </span>
        </a>
    </div>
    
    <div class="pretty-block fcol-4">
        <a href="<%= drinks_path %>">
            <span class="card" style="">
                <%= image_tag("drinksList.png", class: 'card-img-top', width: '100px', height: '100px') %>
                <span class="card-body">
                    <h5 class="card-title">Drinks List</h5>
                </span>
            </span>
        </a>
    </div>
    
    <div class="pretty-block fcol-4">
        <a href="<%= welcome_edit_user_path %>">
            <span class="card" style="">
                <%= image_tag("profile.png", class: 'card-img-top', width: '100px', height: '100px') %>
                <span class="card-body">
                    <h5 class="card-title">Profile</h5>
                </span>
            </span>
        </a>
    </div>


    

    
    <div class="pretty-block fcol-3 queue-block">
        <h2>Queue</h2>
        <%  @orders.each do |order| %>
            <p><%= "#" + order.id.to_s + ") "%>
            
            <% if order.user %>
            <% puts "yes" %>
                <% if not order.user.name.empty? %>
                    <%= order.user.name.to_s %>
                <% else %>
                    <%= order.user.phone_number.to_s %>
                <% end %>
            <% end %>
            </p>
        <% end %>
        <% if @orders.empty? %>
            <p class="text-secondary"> No orders </p>
        <% end %>
    </div>
    
    
    
    
        <div class="pretty-block queue-block">
        <h2>Current Order</h2>
        
        <% if not @ordersComplete.nil? %>
        <h5>
            <%= @ordersComplete.user.name.to_s %>
        </h5>
            
            
        <% @ordersComplete.drinks.each_with_index do |drink, i| %>
            <p><%= "#" + i.to_s + ") "%>
            
            
            <%= image_tag("pin" + (drink.id % 5).to_s + ".JPG", width: '100px') %>
            <%= drink.name.to_s %>
            
            </p>
        <% end %>
    
        
        
        <% end %>

    </div>
    
    
    
</div>

