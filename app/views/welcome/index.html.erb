<div style="display: flex; flex-wrap: wrap; width: 100%; justify-content: space-around;">
  <div class="pretty-block flex-col fcol-3" style="justify-content: flex-end; min-height: 250px;">
    <h1>Hello, Friend!</h1>
    <%= image_tag "drinkmo.svg", :id => "icon", :alt => "User Icon" %>
  </div>
  
  <div class="pretty-block flex-col fcol-3" style="justify-content: center;">
    <%= form_for :creds, url: welcome_login_path, :html => {:class => "pretty-form"} do |form| %>
      <div>
        <%= form.text_field :drivers_license, :placeholder => "Drivers License #" %>
      </div>
      <%= form.submit "Submit", :class => "mg-top-sm" %>
    <% end %>
  </div>
  
  <div class="pretty-block fcol-3 queue-block">
    <h2>Queue</h2>
    <%  @orders.each do |order| %>
      <p><%= "#" + order.id.to_s + ") "%>
      <% if order.user %>
        <% if not order.user.name.empty? %>
          <%= order.user.name %>
        <% else %>
          <%= order.user.phone_number %>
        <% end %>
      <% end %>
      </p>
    <% end %>
    <% if @orders.empty? %>
      <p class="text-secondary"> No orders </p>
    <% end %>
  </div>
</div>